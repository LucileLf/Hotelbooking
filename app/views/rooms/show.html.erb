<div class="show-container">
  <div class="show-container-top">
    <div class="show-pictures">
      <%= image_tag @room.image_url%>
    </div>

    <div class="booking">
      <div class="room-name">
          <%= @room.number%>
      </div>
      <div class="room-price mt-5">
        <%= @room.price_per_night %>€ par nuit
      </div>
      <div class="booking-form" data-controller="flatpickr">
        <%= simple_form_for [@room, @booking] do |f| %>
          <%= f.input :date_begin, as: :string, label: "Date de début", input_html: { data: { flatpickr_target: "dateBegin" }, id: 'date_begin' }%>
          <%= f.input :date_end, as: :string, label: "Date de fin", input_html: { data: { flatpickr_target: "dateEnd" }, id: 'date_end' } %>
          <%= f.button :submit, "Reserver", class: "mt-3 btn custom-button" %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center gap-5 mt-5">
        <% if policy(@room).edit? %>
        <%= link_to "Edit this room", edit_room_path(@room) %>
        <% end %>
        <%= link_to "Delete this room", @room, data: { turbo_method: :delete, turbo_confirm: "Es tu sûre ?" } if policy(@room).destroy? %>
      </div>
    </div>
  </div>

 <div class="show-container-bottom mt-4 border-bottom border-top pt-3 pb-3">
        <div class="description">
          <h2>Description :</h2>
          <p style="font-size: 25px;"><%= @room.description %></p>
        </div>
    </div>


</div>
